<!DOCTYPE html>
<html lang="en">
<head>
  <title>Dashboard</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
   <link href="https://fonts.googleapis.com/css?family=Montserrat:100,400,900" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/dash-style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h1>Candidates</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Date of Birth</th>
        <th>Position</th>
        <th>Qualification</th>
        <th>Portfolio</th>
        <th> CV </th>
      </tr>
    </thead>
    <tbody>
      <% people.forEach(function(people) { %>
        <tr>
          <td> <%= people.name %> </td>
          <td> <%= people.surname %> </td>
          <td> <%= people.email %> </td>
          <td> <%= people.mobile %> </td>
          <td> <%= people.dob %> </td>
          <td> <%= people.position %> </td>
          <td> <%= people.qualification %> </td>
          <td> <a href="http://<%= people.portfolio %>" style="color: #AAA"> <%= people.portfolio %> </a> </td> 
          <td>
            <form action="/getCV" method="post">
              <input type="hidden" name="cvId" value="<%= people.cvurl %>"/>
              <input type="submit" class="btn btn-default" value="View resume" name="Submit"/>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

</body>
</html>